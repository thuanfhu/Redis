{
	"ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2021", "DOM"],
		"target": "es2021",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$services": ["src/services"],
			"$services/*": ["src/services/*"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]
}
